{
    "manifest_version": 2,
    "name": "HDS Link Detector",
    "description": "Extension HDS Link Detector",
    "version": "0.0.6",
    "default_locale": "en",
    "icons": {
        "64": "/icons/logo_64.png"
    },
    "permissions": [
        "storage",
        "cookies",
        "proxy",
        "contextMenus",
        "http://*/*",
        "https://*/*",
        "ftp://*/*",
        "tabs",
        "history",
        "webRequest",
        "webRequestBlocking",
        "clipboardWrite",
        "clipboardRead",
        "notifications"
    ],
    "browser_action":{
        "default_icon":"icons/hds_disabled_128.png",
        "default_title": "HDS Link Detector",
        "default_popup": "/browser_action/browser_action.html"
    },
    "background": {
      "scripts": [
          "/lib/sjcl/sjcl.min.js",
          "/class/hds.js",
          "/class/hds-ws.js",
          "/class/hds-display.js",
          "/class/hds-singleton.js",
          "/bg/background.js"
      ],
      "persistent":true
   },
  "content_scripts": [
    {
      "matches": ["http://*.arte.tv/*"],
      "js": ["class/a47.js"]
    },
    {
      "matches": ["http://www.francetvinfo.fr/en-direct/tv.html"],
      "js": ["class/fihdsforce.js"],
      "run_at": "document_end"
    }
  ]
}
